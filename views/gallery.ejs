<div class="card">
  <h2><i class="fas fa-images"></i> Galería de imágenes</h2>

  <% if (images.length === 0) { %>
    <p>No hay imágenes en la galería.</p>
  <% } else { %>
    <div class="gallery-grid">
      <% images.forEach(image => { %>
        <div class="gallery-item">
          <img src="/gallery/<%= image.name %>" alt="<%= image.name %>" />
          <p><%= image.name %></p>
          <a href="/gallery/<%= image.name %>" class="btn btn-small">
            <i class="fas fa-download"></i> Descargar
          </a>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<style>
  .gallery-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .gallery-item {
    border: 1px solid #ddd;
    padding: 1rem;
    width: 200px;
    text-align: center;
  }

  .gallery-item img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    background: #eee;
    border-radius: 4px;
  }

  .btn-small {
    margin-top: 0.5rem;
    display: inline-block;
    font-size: 0.9rem;
  }
</style>
